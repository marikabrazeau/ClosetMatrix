# Database Configuration for Closet Matrix
# Copy this to .env and fill in your actual values

# Remote server connection
REMOTE_HOST=your-domain.com
REMOTE_USER=your-username

# MySQL admin credentials
MYSQL_ADMIN_USER=your-mysql-admin-user
MYSQL_ADMIN_PASSWORD=your-mysql-admin-password

# Application database settings
DB_HOST=localhost
DB_NAME=your-database-name
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# MySQL root password
MYSQL_ROOT_PASSWORD=your-root-password

# Deployment path
REMOTE_PATH=/var/www/your-site/path